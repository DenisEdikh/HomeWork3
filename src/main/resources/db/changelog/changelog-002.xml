<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="0" author="denis">
        <createTable tableName="directors">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1" author="denis">
        <createTable tableName="films">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="duration" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="director_id" type="bigint">
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="films"
                                 baseColumnNames="director_id"
                                 constraintName="fk_director_id"
                                 referencedTableName="directors"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>
    </changeSet>
    <changeSet id="2" author="denis">
        <createTable tableName="users">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="3" author="denis">
        <createTable tableName="film_user">
            <column name="film_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="film_user"
                       columnNames="film_id, user_id"
                       constraintName="pk_like"/>
        <addForeignKeyConstraint baseTableName="film_user" baseColumnNames="film_id"
                                 constraintName="fk_film_id"
                                 referencedTableName="films" referencedColumnNames="id"
                                 onDelete="CASCADE"/>
        <addForeignKeyConstraint baseTableName="film_user" baseColumnNames="user_id"
                                 constraintName="fk_user_id"
                                 referencedTableName="users" referencedColumnNames="id"
                                 onDelete="CASCADE"/>
    </changeSet>
</databaseChangeLog>